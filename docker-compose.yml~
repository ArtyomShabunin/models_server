version: "2"
services:
  model_sever:
    build: ./models_server
    links:
      - db
    ports:
      - "5001:5000"
    volumes:
      - ./models_server/models_server:/models_server

  db:
    image: mysql
    ports:
      - "3306:3306"
    security_opt:
      - seccomp:unconfined
    environment:
      MYSQL_ROOT_PASSWORD: root
    volumes:
      - ./db:/docker-entrypoint-initdb.d/:ro